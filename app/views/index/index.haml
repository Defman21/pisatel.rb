:javascript
    $posts = #{Oj.dump @posts}

%div#main.cards
    %div#header
        %div#blog-info
            %span#blog-name= @site['name']
            %span#blog-description= @site['description']
        %div.container#menu
            - @site['links'].each do |link|
                %a.link#menu-link{href: link['href']}= link['text']

    %div#cards.container.app
        %div.card(v-for='post in posts' v-cloak)
            %a(:href='"/posts/" + post.id')
                %span.title {{ post.title }}
                %div.description {{ post.description }}

